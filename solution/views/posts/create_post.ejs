<%- include("../components/navbar.ejs") %>

<script src="/javascripts/posts/create_post.js"></script>

<div class="container mt-5">
    <h2 class="mb-4">Create Post</h2>
    <form action="/post" method="POST" enctype="multipart/form-data">

        <div class="mb-3 form-floating">
            <input type="text" class="form-control" id="name" name="name" required>
            <label for="name">Plant Name:</label>
        </div>

        <div class="mb-3 form-floating">
            <textarea class="form-control" id="description" name="description" required
                      style="height: 100px"></textarea>
            <label for="description">Description:</label>
        </div>


        <div class="form-floating">
            <input type="date" class="form-control" id="seenAt" name="seenAt" required>
            <label for="seenAt">Seen At:</label>
        </div>

        <div class="form-group mt-2">
            <p>Location:</p>
            <div class="card">
                <div class="card-body">
                    <input type="hidden" id="location" name="location" required>
                    <label for="location" class="visually-hidden">Location:</label>
                    <button type="button" class="btn btn-primary my-1 w-100" id="useCurrentLocation">Use Current
                        Location
                    </button>
                    <div id="map" style="height: 400px;"></div>
                </div>
            </div>
        </div>

        <div class="form-floating mt-2">
            <input type="number" class="form-control" id="height" name="height" required>
            <label for="height">Height (cm):</label>
        </div>

        <div class="form-floating mt-2">
            <input type="number" class="form-control" id="spread" name="spread" required>
            <label for="spread">Spread (cm):</label>
        </div>

        <div class="form-group mt-2">


            <div class="mt-2 d-inline-flex">
                <p class="my-auto mx-2">Sun Exposure:</p>
                <div>

                    <input class="btn-check" type="radio" name="sunExposure" id="fullSun" value="Full Sun"
                           required>
                    <label class="btn btn-outline-secondary" for="fullSun"><i class="fa-solid fa-sun fa-2x"></i></label>

                    <input class="btn-check" type="radio" name="sunExposure" id="partialSun" value="Partial Sun">
                    <label class="btn btn-outline-secondary" for="partialSun"><i
                                class="fa-solid fa-cloud-sun fa-2x"></i></label>

                    <input class="btn-check" type="radio" name="sunExposure" id="fullShade" value="Full Shade">
                    <label class="btn btn-outline-secondary" for="fullShade"><i
                                class="fa-solid fa-cloud fa-2x"></i></label>

                </div>
            </div>
        </div>

        <div class="form-group d-inline-flex mt-2">
            <p class="my-auto mx-2">Does this plant have flowers?</p>

            <div class="form-check form-switch">
                <label class="form-check-label" for="hasFlowers">Yes</label>
                <input class="form-check-input" type="checkbox" role="switch" id="hasFlowers" name="hasFlowers">
            </div>

        </div>

        <div class="form-group mt-2">

            <label for="flowerColor">Flower Color:</label>
            <input type="color" class="form-control" id="flowerColor" name="flowerColor">
        </div>

        <div class="form-floating mt-2">
            <select class="form-control" id="leafType" name="leafType" required>
                <option value="" disabled selected>Choose...</option>
                <option value="Leafy">Leafy</option>
                <option value="Needles">Needles</option>
                <option value="None">None</option>
            </select>
            <label for="leafType">Leaf Type:</label>
        </div>

        <div class="form-group mt-2">
            <p class="my-auto">Fruit/Seed:</p>
            <div class="d-inline-flex mt-2">
                <div class="form-check mx-2">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="fruit" value="Fruit" required>
                    <label class="form-check-label" for="fruit">Fruit</label>
                </div>
                <div class="form-check mx-2">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="seed" value="Seed">
                    <label class="form-check-label" for="seed">Seed</label>
                </div>
                <div class="form-check mx-2">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="none" value="None">
                    <label class="form-check-label" for="none">None</label>
                </div>
                <div class="form-check mx-2">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="unknown" value="Unknown/Other">
                    <label class="form-check-label" for="unknown">Unknown/Other</label>
                </div>
            </div>
        </div>

        <div class="card rounded-2 border-secondary-subtle mt-2 bg-light">
            <div class="card-body">
                <div class="form-group">
                    <div class="form-check form-switch">
                        <label for="hasIdentification">Do you have an identification for this plant?</label>
                        <input class="form-check-input" type="checkbox" role="switch" id="hasIdentification"
                               name="hasIdentification">
                    </div>
                </div>

                <div class="form-group">
                    <label for="identifiedAs">What have you identified this plant as?</label>
                    <input type="text" class="form-control" id="identifiedAs" name="identifiedAs">
                </div>
            </div>
        </div>

        <div class="form-group mt-2">
            <label for="images">Images:</label>
            <input type="file" class="form-control-file" id="images" name="images" multiple>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </div>

    </form>
</div>

<%- include("../components/footer.ejs") %>