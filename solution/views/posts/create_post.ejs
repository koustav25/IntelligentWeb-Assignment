<%- include("../components/navbar.ejs") %>
<div class="container mt-5">
    <h2>Create Postform</h2>
    <form action="/post" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="name">Plant Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>

        <div class="form-group">
            <label for="seenAt">Seen At:</label>
            <input type="date" class="form-control" id="seenAt" name="seenAt" required>
        </div>

        <div class="form-group">
            <label for="status">Status:</label>
            <select class="form-control" id="status" name="status" required>
                <option value="new">New Posts</option>
                <option value="old">Old Posts</option>
            </select>
        </div>

        <div class="form-group">
            <label for="location">Location:</label>
            <div id="mapid" style="height: 400px;"></div>
            <input type="hidden" id="location" name="location" required>
            <button type="button" class="btn btn-primary mt-2" id="useCurrentLocation">Use Current Location</button>
        </div>

        <div class="form-group">
            <label for="height">Height (cm):</label>
            <input type="number" class="form-control" id="height" name="height" required>
        </div>

        <div class="form-group">
            <label for="spread">Spread (cm):</label>
            <input type="number" class="form-control" id="spread" name="spread" required>
        </div>

        <div class="form-group">
            <label>Sun Exposure:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="sunExposure" id="fullSun" value="Full Sun" required>
                    <label class="form-check-label weather-icon" for="fullSun"><i class="fas fa-sun"></i></label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="sunExposure" id="partialSun" value="Partial Sun">
                    <label class="form-check-label weather-icon" for="partialSun"><i class="fas fa-cloud-sun"></i></label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="sunExposure" id="fullShade" value="Full Shade">
                    <label class="form-check-label weather-icon" for="fullShade"><i class="fas fa-cloud"></i></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Has Flowers:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="hasFlowers" id="hasFlowersYes" value="true" required>
                    <label class="form-check-label" for="hasFlowersYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="hasFlowers" id="hasFlowersNo" value="false">
                    <label class="form-check-label" for="hasFlowersNo">No</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="flowerColor">Flower Color:</label>
            <input type="text" class="form-control" id="flowerColor" name="flowerColor">
        </div>

        <div class="form-group">
            <label for="leafType">Leaf Type:</label>
            <select class="form-control" id="leafType" name="leafType" required>
                <option value="">Choose...</option>
                <option value="Leafy">Leafy</option>
                <option value="Needles">Needles</option>
                <option value="None">None</option>
            </select>
        </div>

        <div class="form-group">
            <label>Fruit/Seed:</label>
            <div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="fruit" value="Fruit" required>
                    <label class="form-check-label" for="fruit">Fruit</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="seed" value="Seed">
                    <label class="form-check-label" for="seed">Seed</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="none" value="None">
                    <label class="form-check-label" for="none">None</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="fruitSeed" id="unknown" value="Unknown/Other">
                    <label class="form-check-label" for="unknown">Unknown/Other</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="identifiedAs">Identified As:</label>
            <input type="text" class="form-control" id="identifiedAs" name="identifiedAs">
        </div>

        <div class="form-group">
            <label for="identifiedOn">Identified On:</label>
            <input type="date" class="form-control" id="identifiedOn" name="identifiedOn">
        </div>

        <div class="form-group">
            <label for="identifiedBy">Identified By:</label>
            <input type="text" class="form-control" id="identifiedBy" name="identifiedBy">
        </div>

        <div class="form-group">
            <label for="images">Images:</label>
            <input type="file" class="form-control-file" id="images" name="images" multiple>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
