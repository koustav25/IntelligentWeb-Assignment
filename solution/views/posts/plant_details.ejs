<div class="container-fluid vh-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title text-center">[Post Name]</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div>
                                <div class="carousel slide carousel-dark" id="plantImages">
                                    <div class="carousel-indicators">
                                        <button type="button" data-bs-target="#plantImages" data-bs-slide-to="0"
                                                class="active" aria-current="true" aria-label="Slide 1"></button>
                                        <button type="button" data-bs-target="#plantImages" data-bs-slide-to="1"
