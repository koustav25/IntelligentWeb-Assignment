<%- include("../components/navbar.ejs") %>

<main class="container mt-5">
    <h1>Manage Users</h1>

    <form action="/admin/users" method="GET" class="mb-4">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Search users..." value="<%= searchQuery %>">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td class="actions">
                        <div class="btn-group">
                            <form action="/admin/users/<%= user._id %>/reset-password" method="POST">
                                <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-sync-alt"></i> Reset Password</button>
                            </form>
                            <form action="/admin/users/<%= user._id %>/delete" method="POST">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <a href="/admin/users/<%= user._id %>" class="btn btn-primary btn-sm">View Details</a>
                        </div>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</main>

<%- include("../components/footer.ejs")%>