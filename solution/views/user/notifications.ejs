<%- include("../components/header") %>
<style>
    .notification-date {
        margin: 0;
        font-size: 14px;
    }

    .notification-content {
        margin: 0;
        font-size: 16px;
        color: #6c757d;
    }
</style>
<div class="w-100 p-5">
    <h2 class="text-center">Your Notifications</h2>
    <div class="container-md me-auto ms-auto mt-3">
        <% notifications.forEach(notification => { %>
            <div class="max-width-868 me-auto ms-auto border border-2 shadow-sm mb-3 rounded-2 p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex">
                        <div class="me-1 pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 text-white bg-primary bg-opacity-100">
                            ID: <%= notification.postId %>
                        </div>
                        <h3 class="ms-1 m-0 fs-5"><%= notification.plantName %></h3>

                    </div>

                    <div class="d-flex">
                        <% if(!notification.seen) { %>
                            <div class="pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 bg-danger bg-opacity-25 me-2 border border-danger">
                                New
                            </div>
                        <% } %>
                        <div class="pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 <%= notification.ownerId === user.id ? "bg-success bg-opacity-75 text-white" : "bg-warning text-black" %>">
                            <%= notification.ownerId === user.id ? "Your Post" : "Commented Post" %>
                        </div>
                    </div>


                </div>
                <div class="ms-1">
                    <p class="m-0 fs-7 text-muted">Date: <%= notification.dateTime %></p>
                    <p class="m-0 fs-6 mt-3"><%= notification.content %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>