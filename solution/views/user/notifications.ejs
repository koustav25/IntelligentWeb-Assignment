<%- include("../components/header") %>

<div class="w-100 p-5">
    <h2 class="text-center mb-3">Your Notifications</h2>
    <%- include("../components/header") %>

    <div class="container-md max-width-868">
        <form action="" class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-group me-3 flex-grow-1">
                <label for="sortByDate" class="form-label text-center d-block">Sort by date</label>
                <select name="sortByDate" id="sortByDate" class="form-control w-100">
                    <option value="mostRecent">Most Recent</option>
                    <option value="oldest">Oldest</option>
                </select>
            </div>
            <div class="form-group me-3 flex-grow-1">
                <label for="notificationType" class="form-label text-center d-block">Notification Type</label>
                <select name="notificationType" id="notificationType" class="form-control w-100">
                    <option value="allPosts">All</option>
                    <option value="yourPosts">Your posts</option>
                    <option value="commentedPosts">Commented posts</option>
                </select>
            </div>
            <button class="btn btn-primary align-self-end">Filter</button>
        </form>
    </div>
    <div class="container-md me-auto ms-auto mt-3">
        <% notifications.forEach(notification => { %>
            <div class="max-width-868 me-auto ms-auto border border-2 shadow-sm mb-3 rounded-2 p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex">
                        <div class="me-1 pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 text-white bg-primary bg-opacity-100">
                            ID: <%= notification.postId %>
                        </div>
                        <h3 class="ms-1 m-0 fs-5"><%= notification.plantName %></h3>

                    </div>

                    <div class="d-flex">
                        <% if(!notification.seen) { %>
                            <div class="pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 bg-danger bg-opacity-25 me-2 border border-danger">
                                New
                            </div>
                        <% } %>
                        <div class="pt-1 pb-1 pe-3 ps-3 rounded-4 fs-7 <%= notification.ownerId === user.id ? "bg-success bg-opacity-75 text-white" : "bg-warning text-black" %>">
                            <%= notification.ownerId === user.id ? "Your Post" : "Commented Post" %>
                        </div>
                    </div>


                </div>
                <div class="ms-1">
                    <p class="m-0 fs-7 text-muted">Date: <%= notification.dateTime %></p>
                    <p class="m-0 fs-6 mt-3"><%= notification.content %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>