<%- include("../components/header")%>
<div class="container">
    <div class="row my-3">
        <div class="col-md-12 text-center">
            <h2>Plant Recognition Application</h2>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <table class="table table-striped table-bordered" id="plant_management">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Comments</th>
                    <th><i class="fas fa-eye"></i></th>
                </tr>
                </thead>
                <tbody>
                <% plantPost.forEach(plantPost => { %>
                    <tr>
                        <td><%= plantPost.user %></td>
                        <td><%= plantPost.DateTime %></td>
                        <td><%= plantPost.Location %></td>
                        <td><%= plantPost.Comments %></td>
                        <td><a href="">view</a></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
